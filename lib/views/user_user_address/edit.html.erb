<% @title = _('Change your Address on {{site_name}}',
   :site_name => site_name) %>

<div id="change_user_address">
  <%= form_for(@user, :url => user_update_user_address_path) do |f| %>
    <%= foi_error_messages_for :user %>

    <div class="form_note">
      <h1><%= @title %></h1>
    </div>

    <p>
      <%= f.label :user_address, _('Address:'),
                  :class => 'form_label' %>
      <%= f.text_field :user_address, :value => @user.user_address,  :placeholder => 'your Address' %>
    </p>

    <div class="form_button">
      <%= f.submit _('Change Address') %>
    </div>
  <% end %>
</div>